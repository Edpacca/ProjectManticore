<Window x:Class="ManticoreViewer.ProjectManticore.Views.CampaignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManticoreViewer.ProjectManticore.Views"
        mc:Ignorable="d" FontSize="18" FontFamily="Book Antiqua" 
        Title="Manticore: Campaign" Height="1080" Width="960" WindowState="Maximized">
    <Grid>
        
        <Grid.ColumnDefinitions>
        <ColumnDefinition Width="30" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
        <RowDefinition Height="30" />
        <RowDefinition Height="50" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" Text="Campaign Manager" FontSize="32" Foreground="Black" FontWeight="Bold" Margin="10,0,0,10"/>
        <Button x:Name="BackButton" Grid.Column="2" Grid.Row="1" Content="Back" Click="BackButton_Click" />

    </Grid>
</Window>
